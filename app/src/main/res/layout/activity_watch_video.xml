<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- VideoView with MediaController -->
    <FrameLayout
        android:id="@+id/videoLayout"
        android:layout_width="0dp"
        android:layout_height="280dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <MediaController
            android:id="@+id/media_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            />
    </FrameLayout>

    <!-- Other Views Below VideoView -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/videoLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:padding="10dp">

        <!-- Title and Back Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Go Back ImageButton -->
            <ImageButton
                android:id="@+id/btnGoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:contentDescription="@string/back"
                android:background="@null"
                android:padding="12dp"/>

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/title_description"
                android:importantForAccessibility="yes"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:text="@string/title"
                android:textAlignment="viewStart"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/btnGoBack" />

        </LinearLayout>

        <!-- Author, Duration, Views, Upload Date -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="11dp"
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="@id/tvContent">

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/author"
                android:contentDescription="@string/author"
                android:importantForAccessibility="yes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textStyle="bold"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:contentDescription="@string/duration"
                android:importantForAccessibility="yes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textStyle="bold"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/tvViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/views"
                android:contentDescription="@string/views"
                android:importantForAccessibility="yes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textStyle="bold"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/tvUploadDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uploadDate"
                android:contentDescription="@string/upload_date"
                android:importantForAccessibility="yes" />
        </LinearLayout>

        <!-- Comments Section Header -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comments"
                android:textSize="15sp"
                android:contentDescription="@string/comments_description"
                android:importantForAccessibility="yes"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:contentDescription="@string/amount"
                android:importantForAccessibility="yes"
                android:paddingStart="8dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <!-- Add Comment Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/etComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/add_comment_hint"
                android:importantForAccessibility="yes"
                android:inputType=""
                android:textColor="@color/black"
                android:padding="12dp"
                android:background="@drawable/background"
                android:textColorHint="#A9A9A9"/>

            <ImageButton
                android:id="@+id/btnAddComment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/send"
                android:src="@drawable/baseline_send_24"
                android:background="@null"
                android:padding="20dp"
                />
        </LinearLayout>

        <!-- RecyclerView for Comments -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lstComments"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
